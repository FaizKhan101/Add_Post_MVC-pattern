<%- include("includes/head.ejs", {title: "Update-Post"}) %>
<link rel="stylesheet" href="/styles/admin.css">
<!-- <link rel="stylesheet" href="/styles/post.css"> -->
</head>
<body>
    <%- include('includes/header.ejs') %>
    <main>
        <form id="admin-form" action="/posts/<%= post.id %>/edit" method="POST">
            <h1>Upadte and View Post</h1>
            <div>
                <label for="title">Title</label>
                <input type="text" id="title" value="<%= post.title %>" required name="title">

                <label for="content">Content</label>
                <textarea name="content" id="content" rows="15"><%= post.content %></textarea>
            </div>
            <a href="/admin" class="cancel-btn">Cancel</a>
            <button type="submit" class="btn">Save</button>
        </form>

    </main>
</body>
</html>